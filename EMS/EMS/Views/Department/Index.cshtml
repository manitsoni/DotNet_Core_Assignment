
@{
    ViewData["Title"] = "Index";
}
<h1>Department List</h1>
<p>
    <a class="btn btn-info" asp-action="Create"><i class="fa fa-plus"></i></a>
</p>
<h1>Department List</h1>
@if (TempData["message"] != null)
{
    <div class="alert alert-success">
        <strong>@TempData["message"]</strong>
    </div>
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.data)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                        <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a> |
                        <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">
                            <i class="fa fa-info" aria-hidden="true"></i>
                        </a> |
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
            </tr>
        }
    </tbody>
</table>